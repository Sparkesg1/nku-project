<!DOCTYPE html>
<html>
<head>
  <title>NkuProject</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


  <% if current_user %>
    <%= link_to ' create new employee ', new_employee_path, class: "btn btn-default navbar-btn" %>
    <br>
    <%= link_to ' request off ', new_request_off_path, class: "btn btn-default navbar-btn" %>
    <%= link_to ' view requests off ', request_offs_path, class: "btn btn-default navbar-btn" %>
    <br>
    <p class="navbar-text current-student hello-text">
    Hi <%= current_user.first_name %>!
    </p>
    <%= link_to "Sign out", session_path(session), method: :delete, 
      data: { confirm: 'Are you sure you want to sign out?' }, class: "btn btn-default navbar-btn"%>
  <% else %>
    <%= link_to ' create new employee ', new_employee_path, class: "btn btn-default navbar-btn" %>
    <%= link_to ' Login ', sessions_path %>
  <% end %>
  <br>
<%= yield %>
</body>
</html>